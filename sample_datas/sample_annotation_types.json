    {
      "id": "codicological-philological",
      "name": "Codicological/Philological Features",
      "description": "Features related to manuscript characteristics and scribal practices. Important for reconstructing scribal practices. Less urgent than Linguistic and Content features.",
      "level": 0,
      "mnemonic": "COD",
      "notes": "Desired annotation features for codicological analysis",
      "subcategories": [
        {
          "id": "cod-script-size",
          "name": "Script Size",
          "description": "Size of the script in the manuscript",
          "level": 1,
          "mnemonic": "COD-SIZE",
          "examples": [
            "normal",
            "small",
            "big"
          ],
          "notes": "Fixed values: normal, small, big"
        },
        {
          "id": "cod-script-direction",
          "name": "Script Direction",
          "description": "Direction of the script",
          "level": 1,
          "mnemonic": "COD-DIR",
          "examples": [
            "horizontal",
            "vertical",
            "circular"
          ]
        },
        {
          "id": "cod-script-style",
          "name": "Script Style",
          "description": "Style of Tibetan script",
          "level": 1,
          "mnemonic": "COD-STYLE",
          "examples": [
            "ume",
            "uchen"
          ]
        },
        {
          "id": "cod-script-colour",
          "name": "Script Colour",
          "description": "Colour of the script",
          "level": 1,
          "mnemonic": "COD-COLOUR",
          "examples": [
            "black",
            "red",
            "gold"
          ]
        },
        {
          "id": "cod-illustration",
          "name": "Illustration",
          "description": "Presence of illustrations in the text",
          "level": 1,
          "mnemonic": "COD-ILL",
          "examples": [
            "Decorative illustrations",
            "Figure drawings",
            "Ornamental elements"
          ]
        },
        {
          "id": "cod-table",
          "name": "Table",
          "description": "Presence of tables in the text",
          "level": 1,
          "mnemonic": "COD-TAB",
          "examples": [
            "Data tables",
            "Comparison tables",
            "Structured information"
          ]
        },
        {
          "id": "cod-symbols",
          "name": "Symbols",
          "description": "Special symbols or marks in the text",
          "level": 1,
          "mnemonic": "COD-SYM",
