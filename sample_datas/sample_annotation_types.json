    {
      "id": "linguistics",
      "name": "Linguistics Features",
      "description": "Linguistic annotations including segmentation, POS tags, semantic roles, and animacy. Some features (word segmentation and POS tags) are added prior to upload.",
      "level": 0,
      "mnemonic": "LING",
      "notes": "Necessary features for linguistic analysis",
      "subcategories": [
        {
          "id": "ling-segmentation",
          "name": "Segmentation/Tokenisation",
          "description": "Segmented or tokenised version of text",
          "level": 1,
          "mnemonic": "LING-SEG",
          "examples": [
            "དཔང་/n.count ལོ་ཙཱ་བ་/n.count",
            "Word boundaries",
            "Token boundaries"
          ],
          "notes": "Text is tokenised with each token followed by / + POS tag"
        },
        {
          "id": "ling-pos",
          "name": "Part-of-Speech Tags",
          "description": "Morphosyntactic part-of-speech tags",
          "level": 1,
          "mnemonic": "LING-POS",
          "examples": [
            "n.count (noun count)",
            "n.prop (proper noun)",
            "case.gen (genitive case)",
            "num.card (cardinal number)",
            "punc (punctuation)"
          ],
          "notes": "POS tags are provided in format: token/POS_tag"
        },
        {
          "id": "ling-semantic-roles",
          "name": "Semantic Roles",
          "description": "Semantic roles that can be manually added or corrected",
          "level": 1,
          "mnemonic": "LING-SR",
          "examples": [
            "agent",
            "patient",
            "theme",
            "recipient",
            "location"
          ],
          "notes": "Can be manually added or corrected in the annotation tool"
        },
        {
          "id": "ling-animacy",
          "name": "Animacy",
          "description": "Animacy classification that can be manually added or corrected",
          "level": 1,
          "mnemonic": "LING-ANIM",
          "examples": [
            "human",
            "animate",
            "inanimate"
          ],
          "notes": "Can be manually added or corrected in the annotation tool"
        }
      ]
    },
